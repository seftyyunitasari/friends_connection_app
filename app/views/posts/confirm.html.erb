<h1>Confirmation Page</h1>
<%= form_with(model: @post, local: true) do |f| %>
  <%= f.hidden_field :description %>
  <%= f.hidden_field :image %>
  <p>Description: <%= @post.description %></p>
  <p>Image: <%= @post.image %></p>
  <%= f.submit 'Post' %>
  <%= f.submit 'Return', name: 'back' %>
<% end %>